                    <CheckBox x:Name="checkBox_OuterWall_3D" Content="OuterWall" Height="16.833" BorderBrush="#FF335B5B" Background="#FF333333" Foreground="#FFFDFBFB" Margin="10,10,0,0" FontSize="11" Style="{DynamicResource CheckBoxStyle1}" Click="CheckBox_OuterWall_Click"/>
                    <CheckBox x:Name="checkBox_Tumor_3D" Content="Tumor" Height="16.833" BorderBrush="#FF335B5B" Background="#FF333333" Foreground="#FFFDFBFB" Margin="10,10,0,0" FontSize="11" Style="{DynamicResource CheckBoxStyle1}" Click="CheckBox_Tumor_Click"/>
                    <CheckBox x:Name="checkBox_Layer_3D" Content="Layer" Height="16.833" BorderBrush="#FF335B5B" Background="#FF333333" Foreground="#FFFDFBFB" Margin="10,10,0,0" FontSize="11" Style="{DynamicResource CheckBoxStyle1}" Click="CheckBox_Layer_Click"/>
                    <CheckBox x:Name="checkBox_OXY_3D" Content="OXY" Height="16.833" BorderBrush="#FF335B5B" Background="#FF333333" Foreground="#FFFDFBFB" Margin="10,10,0,0" FontSize="11" Style="{DynamicResource CheckBoxStyle1}" Click="CheckBox_OXY_Click"/>
                    <CheckBox x:Name="checkBox_DeOXY_3D" Content="DeOXY" Height="16.833" BorderBrush="#FF335B5B" Background="#FF333333" Foreground="#FFFDFBFB" Margin="10,10,0,0" FontSize="11" Style="{DynamicResource CheckBoxStyle1}" Click="CheckBox_DeOXY_Click"/>
                    <CheckBox x:Name="checkBox_GNR_3D" Content="GNRs" Height="16.833" BorderBrush="#FF335B5B" Background="#FF333333" Foreground="#FFFDFBFB" Margin="10,10,0,0" FontSize="11" Style="{DynamicResource CheckBoxStyle1}" Click="CheckBox_GNR"/>
                </StackPanel>
